{% extends 'back.html.twig' %}

{% block title %}Materiel{% endblock %}

{% block body %}
    <h1>Materiel </h1>

    <table class="table">
    <div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                </ol>
            </nav>
        </div>
    <div class="row ">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <div style="display: flex">
                        <div class="col-md-5">
                        </div>
                        <form method="post" class="forms-sample" style="margin-left: -42px" >
                            <div class="form-group col-md-4" style="display: flex; width: 100%!important; margin: 0px!important;">
                                   
                                <div class="form-check">
                                
                                    <label class="form-check-label" style="width: 92px;margin-left: -2px;margin-right: 10px;">
                                        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="nomm">Nom</label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label" style="width: 86px;margin-left: -2px;margin-right: 10px;">
                                        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="marque" >Marque</label>
                                </div>

                                <div class="form-check">
                                    <label class="form-check-label" style="width: 86px;margin-left: -2px;margin-right: 10px;">
                                        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="prix" >Prix</label>
                                </div>

                              <button type="Submit" class="btn btn-success btn-fw" style="margin: auto;background-color: #5388FA;">Sort</button>
                            </div>
                        </form>

                    </div>
  
                    <ul class="navbar-nav w-100" style="margin-top: 18px;">
                        <li class="nav-item w-100">
                            <form name="Search-method" id="Search-method"method="post" class="forms-sample" style="display: flex">
                                <div class="form-group col-md-5">
                                    <label style="margin-top: 11px;margin-left: 10px;margin-right: 14px;padding-bottom: 7px;;">Option Recherche</label>
                                    <select name="optionsearch" class="js-example-basic-single" style="width: 200px;height: 38px; color: white; background-color: #5388FA; border-radius: 4px;text-align: center;border: 2px solid #0090e7;margin-right: 15px;">
                                        <option value="">Choisi un Crit√©re</option>
                                        <option value="nomm">Nom </option>
                                        <option value="marque">Marque</option>
                                        <option value="prix">Prix</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-7">
                                    <div class="input-group">
                                        <input name="Search" type="text" class="form-control" placeholder="Search Annonce" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-sm btn-primary" type="Submit">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </li>
                    </ul>
        <thead>
            <tr>
                
                <th>Nomm</th>
                <th>Marque</th>
                <th>Prix</th>
                <th>Descm</th>
                <th>Image</th>
              
            </tr>
        </thead>
        <tbody>
        {% for materiel in materiel %}
            <tr>
               
                <td>{{ materiel.nomm }}</td>
                <td>{{ materiel.marque }}</td>
                <td>{{ materiel.prix }}</td>
                <td>{{ materiel.descm }}</td>
                <td><img src="{{ asset('img/'~ materiel.image ) }}" width="50%" height="50%"></td>
                <td>
                   
                   {{ include('materiel/_deleteback_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
