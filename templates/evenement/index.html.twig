{% extends 'front.html.twig' %}



{% block body %}

{% for message in app.flashes('notification') %}
        <div class="alert alert-info alert-dismissible fade show" style="background-color:#a94442;">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
    {% endfor %}

    <div class="service">
        <div class="container">
            <div class="section-header text-center">
              <div id="google_translate_element"></div>

                <h4 style="margin-top:50px; margin-bottom:50px;">Liste des Evenements</h4>
            </div>
            <div class="row">
           {% for evenement in evenements %}
        <div class="col-lg-4 col-md-6 mb-4">
        <div class="service-item">
          <td><img src="{{ asset('uploads/' ~evenement.imagee) }}" style=" width:350px; height:350px; " alt=""/></td>
          <center><h2>{{ evenement.titre }}</h2></center>
          <p><strong style="color:#696969"> Description:</strong> {{ evenement.description }}</p>
          <p><strong style="color:#696969" >Nom societe:</strong> {{ evenement.ids.noms }}</p>
          <p><strong style="color:#696969">Date de fin:</strong> {{ evenement.datee ? evenement.datee|date('Y-m-d') : '' }}</p>
 <td>
                    {#<a href="{{ path('app_evenement_show', {'ide': evenement.ide}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'ide': evenement.ide}) }}">edit</a>#}
                    <button type="button" class="btn btn-primary" onclick="window.location.href='{{ path('app_evenement_show', {'ide': evenement.ide}) }}'">Show</button>
                    <button type="button" class="btn btn-primary" onclick="window.location.href='{{ path('app_evenement_edit', {'ide': evenement.ide}) }}'">Edit</button>


                </td>
         <br>
         <br>
         {# -------------------------- Share ------------------------------------  #}
         <div class="sharethis-inline-share-buttons"></div>
         {# -------------------------- Share ------------------------------------  #}

        </div>
      </div>
      {% else %}
      <div class="col">
        <p class="text-center">Aucun événement trouvé.</p>
      </div>

                {% endfor %}

            </div>

        </div>
    </div>
    <br>
    
 {#<a href="{{ path('app_evenement_new') }}">Create new</a>
  <a href="{{ path('generator_service') }}"> PDF</a>#}
  <button type="button" class="btn btn-primary" onclick="window.location.href='{{ path('app_evenement_new') }}'">Create new</button>
<button type="button" class="btn btn-primary" onclick="window.location.href='{{ path('generator_service') }}'">PDF</button>

<br>
<br>
<br>

<center><div class="btn px-10 py-10" {{knp_pagination_render(evenements) }} </div></center>

{% endblock %}